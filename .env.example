# ðŸŒˆ Culture Protocol Engine - Environment Variables Example
# Copy this file to .env and configure your settings

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider Selection
# Options: openai, runpod, mock
LLM_TYPE=openai

# OpenAI Configuration (when LLM_TYPE=openai)
OPENAI_API_KEY=your_openai_api_key_here

# RunPod Configuration (when LLM_TYPE=runpod)
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_runpod_endpoint_id_here

# =============================================================================
# Application Configuration
# =============================================================================

# Environment
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Culture Protocol Specific Settings
# =============================================================================

# Default Culture Protocol Settings
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=500
DEFAULT_MEMORY_SIZE=20

# Simulation Settings
SIMULATION_MAX_AGENTS=50
SIMULATION_MAX_TURNS=100

# =============================================================================
# Optional Integrations
# =============================================================================

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/culture_protocol

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379/0

# Logging Level
LOG_LEVEL=INFO